<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="es.esy.fastravel.fastravel.Frag_Inicio">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffff"
        android:layout_margin="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView9"
                    android:src="@drawable/separador"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="5dp" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/imageButton5"
                    android:src="@drawable/carro"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Se você deseja localizar pontos de táxi mais próximo de você, essa é a sua melhor opção!"
                    android:id="@+id/textView"
                    android:layout_toEndOf="@+id/imageButton5"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:typeface="monospace"
                    android:layout_toRightOf="@+id/imageButton5"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentLeft="false"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_above="@+id/imageButton6"
                    android:layout_marginRight="5dp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView7"
                    android:src="@drawable/separador"
                    android:layout_below="@+id/imageButton5"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Se você deseja localizar pontos de moto-táxi mais próximo de você, essa é a sua melhor opção!"
                    android:id="@+id/textView6"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:typeface="monospace"
                    android:layout_above="@+id/imageButton7"
                    android:layout_below="@+id/imageView7"
                    android:layout_alignRight="@+id/textView8"
                    android:layout_alignEnd="@+id/textView8"
                    android:layout_marginLeft="5dp" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/imageButton6"
                    android:src="@drawable/moto"
                    android:layout_below="@+id/imageView7"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="5dp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView8"
                    android:src="@drawable/separador"
                    android:layout_below="@+id/imageButton6"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/imageButton7"
                    android:src="@drawable/van"
                    android:layout_below="@+id/imageView8"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Se você deseja localizar pontos de van-táxi e locadoras de vans mais próximo de você, essa é a sua melhor opção!"
                    android:id="@+id/textView7"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:typeface="monospace"
                    android:layout_alignBottom="@+id/imageButton7"
                    android:layout_alignLeft="@+id/textView"
                    android:layout_alignStart="@+id/textView"
                    android:layout_alignTop="@+id/imageButton7"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView6"
                    android:src="@drawable/separador"

                    android:layout_below="@+id/imageButton7"
                    android:layout_alignRight="@+id/textView7"
                    android:layout_alignEnd="@+id/textView7"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/imageButton8"
                    android:src="@drawable/onibus"
                    android:layout_below="@+id/imageView6"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Se você deseja localizar locadoras de ônibus e fretados mais próximo de você, essa é a sua melhor opção!"
                    android:id="@+id/textView8"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:typeface="monospace"
                    android:layout_alignTop="@+id/imageButton8"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/imageButton8"
                    android:layout_toStartOf="@+id/imageButton8"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</FrameLayout>
