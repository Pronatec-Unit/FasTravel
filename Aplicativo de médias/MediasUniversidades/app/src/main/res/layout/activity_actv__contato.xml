<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.esy.atividadeslucas.mediasuniversidades.ACTV_Contato"
    android:background="#0b6468">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edt_Mensagem"
        android:hint="Mensagem..."
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_above="@+id/imageView7"
        android:background="#06967e"
        android:layout_below="@+id/imageView2" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Enviar "
        android:onClick="Enviar"
        android:id="@+id/btn_Enviar"
        android:textSize="18dp"
        android:layout_alignTop="@+id/btn_Cancelar"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/btn_Cancelar"
        android:onClick="Cancelar"
        android:textSize="18dp"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nos envie sugestões, dicas, críticas ou qualquer outra informação."
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Contate-nos!"
        android:id="@+id/textView4"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/separador"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:src="@drawable/separador"
        android:layout_above="@+id/btn_Enviar"
        android:layout_alignParentStart="true" />

</RelativeLayout>
