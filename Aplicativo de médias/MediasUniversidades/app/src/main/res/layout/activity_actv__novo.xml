<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.esy.atividadeslucas.mediasuniversidades.Actv_Novo"
    android:background="#0b6468">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Crie sua ponderação!"
        android:id="@+id/textView16"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:layout_alignEnd="@+id/imageView3"
        android:textAlignment="center"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/separador"
        android:layout_above="@+id/imageView4"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="33dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/imageView4"
        android:src="@drawable/iunidade"
        android:layout_above="@+id/ednota1"
        android:layout_alignStart="@+id/ednota1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/ednota1"
        android:textColor="#083041"
        android:textSize="30dp"
        android:background="#ffffff"
        android:inputType="number|numberSigned|numberDecimal"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/imageView6"
        android:layout_alignEnd="@+id/Btn_Contato"
        android:layout_alignStart="@+id/ednota2"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/imageView6"
        android:src="@drawable/iiunidade"
        android:layout_above="@+id/ednota2"
        android:layout_alignStart="@+id/ednota2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/ednota2"
        android:textColor="#083041"
        android:textSize="30dp"
        android:background="#ffffff"
        android:inputType="number|numberSigned|numberDecimal"
        android:layout_above="@+id/imageView5"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/Txt_Resultado"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/separador"
        android:layout_above="@+id/btCalcular"
        android:layout_alignEnd="@+id/Btn_Contato"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:id="@+id/btLimpar"
        android:src="@drawable/limpar"
        android:textAlignment="center"
        android:contentDescription="@string/_500"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginRight="-20dp"
        android:layout_marginLeft="-2dp"
        android:layout_above="@+id/Txt_Resultado"
        android:layout_toEndOf="@+id/textView21" />

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:id="@+id/btCalcular"
        android:src="@drawable/calcular"
        android:textAlignment="center"
        android:contentDescription="@string/_500"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginLeft="-147dp"
        android:layout_marginRight="110dp"
        android:layout_above="@+id/Txt_Resultado"
        android:layout_toEndOf="@+id/textView21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Se algum erro for encontrado, entre em contato com a gente."
        android:id="@+id/textView20"
        android:textColor="#ffffff"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Aqui!"
        android:id="@+id/Btn_Contato"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView20"
        android:background="#ffffff"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:textSize="10dp"
        android:onClick="contato"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/Txt_Resultado"
        android:background="#cef1f9"
        android:textColor="#03253a"
        android:textSize="40dp"
        android:textAlignment="center"
        android:inputType="number"
        android:layout_above="@+id/Btn_Contato"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Média"
        android:id="@+id/textView21"
        android:textColor="#ffffff"
        android:layout_below="@+id/Txt_Resultado"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Peso"
        android:id="@+id/textView22"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView21"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Peso"
        android:id="@+id/textView23"
        android:textColor="#ffffff"
        android:layout_above="@+id/ednota1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView22" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/edPeso1"
        android:layout_alignBottom="@+id/ednota1"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/ednota1"
        android:textColor="#ffffff"
        android:contextClickable="false"
        android:maxLength="1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/edPeso2"
        android:layout_above="@+id/imageView5"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/ednota2"
        android:textColor="#ffffff"
        android:maxLength="1" />

</RelativeLayout>